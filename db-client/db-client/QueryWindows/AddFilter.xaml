<Window x:Class="db_client.QueryWindows.AddFilter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:db_client.QueryWindows"
        mc:Ignorable="d"
        Title="AddFilter" Width="300" Height="210">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Field:" Margin="0,0,0,5"/>
            <ComboBox x:Name="FieldComboBox" DisplayMemberPath="Name"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Value:" Margin="0,0,0,5"/>
            <TextBox x:Name="ValueTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0"
                    Click="Ok_Click"/>
            <Button Content="Cancel" Width="80"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
