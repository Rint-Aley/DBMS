<Window x:Class="db_client.QueryWindows.CreateTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Table" Height="600" Width="700">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TABLE NAME -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Table Name:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtTableName" Width="200"/>
        </StackPanel>

        <!-- FIELD DEFINITION TABLE -->
        <GroupBox Header="Fields" Grid.Row="1" Margin="0 15 0 15">
            <DataGrid x:Name="FieldsGrid" AutoGenerateColumns="False" CanUserAddRows="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Field Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridComboBoxColumn Header="Type" Width="2*"
                                            SelectedItemBinding="{Binding Type}">
                        <DataGridComboBoxColumn.ItemsSource>
                            <x:Array Type="{x:Type sys:String}" 
                                     xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                <sys:String>string</sys:String>
                                <sys:String>i32</sys:String>
                                <sys:String>u64</sys:String>
                                <sys:String>bool</sys:String>
                                <sys:String>f32</sys:String>
                                <sys:String>f64</sys:String>
                                <sys:String>i8</sys:String>
                                <sys:String>i16</sys:String>
                                <sys:String>i64</sys:String>
                                <sys:String>u8</sys:String>
                                <sys:String>u16</sys:String>
                                <sys:String>u32</sys:String>
                            </x:Array>
                        </DataGridComboBoxColumn.ItemsSource>
                    </DataGridComboBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- PK + INDEXES + CONFIRM -->
        <StackPanel Grid.Row="2" >
            <!--Spacing="10"-->

            <TextBlock Text="Primary Key Field:"/>
            <ComboBox x:Name="ComboPrimaryKey" Width="200"/>

            <TextBlock Margin="0,10,0,0" Text="Indexed Fields:"/>
            <ListBox x:Name="IndexList" SelectionMode="Extended" Height="100"/>

            <Button x:Name="BtnCreate" Content="Create Table"
                    HorizontalAlignment="Right" Width="120" Margin="0 10 0 0"/>
        </StackPanel>

    </Grid>
</Window>
