<Window x:Class="db_client.QueryWindows.CreateTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Table" Height="300" Width="500">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TABLE NAME -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Table Name:" VerticalAlignment="Center"/>
            <TextBox x:Name="TableNameTextBox" Width="200" Margin="10 0 0 0"/>
        </StackPanel>

        <!-- FIELD DEFINITION TABLE -->
        <StackPanel Grid.Row="1" Margin="0 10 0 0">
            <ListView x:Name="FieldsListView" Grid.Row="1" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="100"
                        DisplayMemberBinding="{Binding Name}" />

                        <GridViewColumn Header="Type" Width="100"
                        DisplayMemberBinding="{Binding Type}" />

                        <GridViewColumn Header="Index" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsIndexed}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Primary Key" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <RadioButton IsChecked="{Binding IsPrimaryKey}" 
                                        GroupName="PrimaryKeyGroup"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddField" Click="AddField_Click" Content="Add field"
                    Width="120" Margin="0 10 0 0"/>
                <Button x:Name="DeleteField" Click="DeleteField_Click" Content="Delete field"
                    Width="120" Margin="10 10 0 0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="Ok" Click="Ok_Click" Content="Ok"
                Width="70" Margin="0 10 0 0"/>
            <Button x:Name="Cancel" Click="Cancel_Click" Content="Cancel"
                Width="70" Margin="10 10 0 0"/>
        </StackPanel>

    </Grid>
</Window>
