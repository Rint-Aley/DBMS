<Window x:Class="db_client.QueryWindows.ChangeRecords"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:db_client.QueryWindows"
        mc:Ignorable="d"
        Title="ChangeRecords" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Change Records" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Filters:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>

        <DataGrid Grid.Row="2"
              x:Name="FiltersGrid"
              AutoGenerateColumns="False"
              ItemsSource="{Binding Filters}"
              CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Field"
                        Binding="{Binding field.Name}" />

                <DataGridTextColumn Header="Type"
                        Binding="{Binding field.Type}" />

                <DataGridTextColumn Header="Value"
                        Binding="{Binding value}" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="3" Text="Changes to Apply:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>

        <DataGrid Grid.Row="4"
              x:Name="ChangesGrid"
              AutoGenerateColumns="False"
              ItemsSource="{Binding Changes}"
              CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Field"
                Binding="{Binding field.Name}" />

                <DataGridTextColumn Header="Type"
                Binding="{Binding field.type}" />

                <DataGridTextColumn Header="Value"
                Binding="{Binding value}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AddFilter" Click="AddFilter_Click" Content="Add Filter" Width="100" Height="30" Margin="5"/>
            <Button x:Name="AddChange" Click="AddChange_Click" Content="Add Change" Width="100" Height="30" Margin="5"/>
            <Button x:Name="ApplyButton" Click="ApplyButton_Click" Content="Apply Changes" Width="100" Height="30" Margin="5"/>
            <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
