<Page x:Class="db_client.RecordManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:db_client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecordManager">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="TableTitleText" Text="Table Records" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid x:Name="RecordsDataGrid" Grid.Row="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AddRecordsButton" Click="AddRecordsButton_Click" Content="Add Records" Width="100" Height="30" Margin="5"/>
            <Button x:Name="DeleteRecordsButton" Click="DeleteRecordsButton_Click" Content="Delete Records" Width="100" Height="30" Margin="5"/>
            <Button x:Name="ChangeRecordsButton" Click="ChangeRecordsButton_Click" Content="Change Records" Width="100" Height="30" Margin="5"/>
            <Button x:Name="ClearTableButton" Click="ClearTableButton_Click" Content="Clear Table" Width="80" Height="30" Margin="5"/>
            <Button x:Name="ExitButton" Click="ExitButton_Click" Content="Exit" Width="60" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
