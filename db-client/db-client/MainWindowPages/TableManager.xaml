<Page x:Class="db_client.MainWindowPages.TableManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:db_client.MainWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TableManager">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Available Tables" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListView x:Name="TablesListView" Grid.Row="1" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Table Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CreateTableButton" Click="CreateTableButton_Click" Content="Create New Table" Width="120" Height="30" Margin="5"/>
            <Button x:Name="OpenTableButton" Click="OpenTableButton_Click"  Content="Open" Width="120" Height="30" Margin="5"/>
            <Button x:Name="DeleteTableButton" Click="DeleteTableButton_Click" Content="Delete" Width="120" Height="30" Margin="5"/>
            <Button x:Name="BackupButton" Click="BackupButton_Click" Content="Backup" Width="80" Height="30" Margin="5" IsEnabled="False"/>
            <Button x:Name="ExportButton" Click="ExportButton_Click" Content="Export to XLSX" Width="100" Height="30" Margin="5" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Page>
